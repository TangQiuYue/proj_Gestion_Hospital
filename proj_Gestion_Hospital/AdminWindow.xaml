<Window x:Class="proj_Gestion_Hospital.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proj_Gestion_Hospital"
        mc:Ignorable="d"
        Title="AdminWindow" Height="500" Width="600">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\TQY_06\Desktop\Graphics\Course_Code\Project_Integrateur_Bourassa_ME\Project_Integrateur_Bourassa_ME\bin\Debug\Images\northern_lights.png" Stretch="UniformToFill" Opacity="0.5"/>
